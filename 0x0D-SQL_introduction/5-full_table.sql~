-- Full Table
SELECT TABLE_NAME AS Table,
       COLUMN_NAME AS Name,
       DATA_TYPE AS Type,
       CHARACTER_MAXIMUM_LENGTH AS Length,
       IS_NULLABLE AS Null,
       COLUMN_DEFAULT AS Default,
       COLUMN_COMMENT AS Comment
FROM INFORMATION_SCHEMA.COLUMNS
WHERE TABLE_SCHEMA = 'hbtn_0c_0' AND TABLE_NAME = 'first_table';
